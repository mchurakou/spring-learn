<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
        <param name="Encoding" value="Cp866"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{ISO8601}] [%-5p] [%c] - %m%n" />
        </layout>
    </appender>
    
    <appender name="applicationAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="log/application.log"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd'.log'"/>
        <param name="Encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{ISO8601}] [%-5p] [%l] - %m%n"/>
        </layout>
    </appender>
    

    
    
    <logger name="com.mikalai" additivity="true">
        <level value="INFO"/>
        <appender-ref ref="applicationAppender"/>
    </logger>
    
    <!-- 3rdparty Loggers -->
    <logger name="org.springframework">
        <level value="INFO" />
    </logger>
    

    <root>
        <priority value="INFO"/>
        <appender-ref ref="consoleAppender" />
    </root>

</log4j:configuration>